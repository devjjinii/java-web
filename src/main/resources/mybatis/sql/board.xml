<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.jin.web.repository.BoardRepository">

    <select id="getList" parameterType="com.jin.web.dto.Board" resultType="com.jin.web.dto.Board">
        SELECT
            B.BOARD_ID
            ,B.TITLE
            ,B.CONTENTS
            ,B.REG_DATE
        FROM TB_BOARD B
        ORDER BY B.REG_DATE DESC
    </select>

    <select id="get" parameterType="int" resultType="com.jin.web.dto.Board">
        SELECT
            B.BOARD_ID
            ,B.TITLE
            ,B.CONTENTS
            ,B.REG_DATE
        FROM TB_BOARD B
        WHERE B.BOARD_ID = #{boardId}
        ORDER BY B.REG_DATE DESC
    </select>

    <insert id="save" parameterType="com.jin.web.param.BoardParam" useGeneratedKeys="true" keyProperty="boardId">
       INSERT INTO TB_BOARD
       (
        TITLE
        ,CONTENTS
        ,REG_DATE
       )
       VALUES
       (
        #{title}
        ,#{contents}
        ,NOW()
       )
    </insert>

    <update id="update" parameterType="com.jin.web.dto.Board">
        UPDATE TB_BOARD
        SET
            TITLE = #{title}
            ,CONTENTS = #{contents}
        WHERE BOARD_ID = #{boardId}
    </update>

    <delete id="delete" parameterType="int">
        DELETE FROM TB_BOARD
        WHERE BOARD_ID = #{boardId}
    </delete>
</mapper>